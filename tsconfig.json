{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react",
    "baseUrl": "./",
    "outDir": "./dist",
    "typeRoots": ["./src/types", "node_modules/@types"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "dist",
    "paths": {
      "@zero-styled/*": ["./src"]
    },
    "types": ["jest", "node"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
