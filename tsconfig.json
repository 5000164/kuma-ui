{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react",
    "baseUrl": "./",
    "outDir": "./dist",
    "typeRoots": ["./src/types", "node_modules/@types"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
