{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNEXT",
    "lib": ["esnext", "dom"],
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react",
    "baseUrl": "./",
    "outDir": "./dist",
    "typeRoots": ["./src/types", "node_modules/@types"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "dist"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules"]
}
